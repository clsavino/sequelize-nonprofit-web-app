<div class="info-row">
    <div class="col-md-12 ">

        <div class="col-md-3">
        </div>

        <div class="col-md-6 text-center">
            <table border="1" width="100%">
                <caption class="green-font text-center table-caption">Volunteer Schedule</caption>
                <tr>
                <th class="gray-font text-center">Volunteer Name</th>
                <th class="gray-font text-center">Event</th>
                <th class="gray-font text-center">Phone Number</th>
                </tr>
                {{#each Volunteers}}
                    <tr>
                    <td>{{this.Name}}</td>
                    <td>{{this.EventName}}</td>
                    <td>{{this.Phone}}</td>
                    </tr>
                {{/each}}
            </table>
        </div>

        <div class="col-md-3">
        </div>

    </div>
</div>

<div class="row ">
    <div class="col-md-12 input-row">
        <div class="col-md-1">
        </div>

        <div class="col-md-10 text-center">
            <div class="input">
                <h4  class="heading green-font">Add a Volunteer</h4>
                <div class="form-group">
                    <form method="POST" action="/Volunteers/insertVolunteer" class="text-center gray-font">

                        Name:<br><input class="input-box" type="text" name="Name" required></input><br>

                        Event Name:<br><input class="input-box" type="text" name="EventName" required></input><br>

                        Phone:<br><input class="input-box" type="text" name="Phone" required></input><br><br>

                        <button class="btnCreate btnGray"  type="submit" >Add a volunteer</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-1">
        </div>

    </div>
</div>
